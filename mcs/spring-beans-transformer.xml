<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <import resource="classpath:net/milanaleksic/baobab/integration/spring-transformer.xml"/>

    <bean id="baobabEmbeddingService" class="net.milanaleksic.baobab.converters.EmbeddingService">
        <property name="methodEventListenerExceptionHandler">
            <bean class="net.milanaleksic.mcs.infrastructure.swt.GuiExceptionHandler"/>
        </property>
    </bean>

    <bean id="baobabResourceBundleProvider" class="net.milanaleksic.mcs.infrastructure.baobab.providers.MCSResourceBundleProvider"/>

    <bean id="baobabObjectProvider" class="net.milanaleksic.mcs.infrastructure.baobab.providers.MCSObjectProvider"/>

    <bean id="baobabImageProvider" class="net.milanaleksic.mcs.infrastructure.baobab.providers.MCSImageProvider"/>

</beans>
